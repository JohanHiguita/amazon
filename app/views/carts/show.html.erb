<% if @order_items.any? %>
<% @order_items.each do |item| %>
<p>
	<%= item.product.name %>
</p>
<p>
	Unit Price: <%= number_to_currency(item.product.price) %>
	Quantity: <%= item.quantity %>
	Total price: <%= number_to_currency(item.product.price * item.quantity) %>
</p>

<p>Your total: <%= number_to_currency(current_order.total) %></p>
<% end %>
<% else %>
<p> Your cart is empty</p>
<% end %>