<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic"><%= @last_post.title %></h1>
    <p class="lead my-3">
      <% if @last_post.content.length > 140 %>
      <%= @last_post.content.truncate(140) %>
      <p class="lead mb-0"><%= link_to "...Read More", post_path(@last_post.id), class: "text-white font-weight-bold" %></p>
      <% else %>
      <%= @last_post.content %>
      <% end %>
    </p>
  </div>
</div>

<%= render "cards" %>
